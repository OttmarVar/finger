@{
    ViewData["Title"] = "Home Page";
}

<div>
    <style>
        html {
            background-image: url("https://banknxt.com/wp-content/uploads/2017/03/Finger-pay-redux.jpg");
            width: 100%;
            height: 100%;
            background-size: cover;
            font: white;
        }

        .whiteFinger {
            color: white;
            font-size: 15px;
        }

        .whiteHuella {
            color: white;
            font-size: 40px;
        }

        .white {
            color: white;
            font-size: 15px;
        }

        .fondoVerde {
            width: 450px;
            background-color: cadetblue;
            margin: auto;
            margin-top: 100px;
            padding: 40px;
            border-radius: 20px;
        }

        .centrado {
            width: 300px;
            margin: auto;
        }

        .justificado {
            margin: 0px 35px 0px;
        }

        .justificado2 {
            margin: 0px 0px 0px;
        }

        .centrarBoton {
            margin: 0px 0px 0px;
        }

        .borde {
            border-bottom-style: groove;
            border-top-style: groove;
            border-left-style: groove;
            border-right-style: groove;
            border-width: 3px;
            border-radius: 7px;
            padding-left: 125px;
            padding-right: 125px;
            margin-bottom: 20px;
            margin-top: 20px;
        }
    </style>

    <div class="fondoVerde">
        <div class="logo columns">
            <div class="column is-one-quarter justificado2">
                <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/b/bf/Fingerprint_picture.svg/200px-Fingerprint_picture.svg.png" height="300" width="300">
            </div>
            <div class="column justificado2 whiteHuella">
                <p class="whiteHuella">Huellador <br /></p>
                <p class="whiteFinger">Finger print recognition</p>
            </div>
        </div>
        <div class="formulario white">
            <label class="label justificado white">Email</label>
            <div class="control has-icons-left has-icons-right centrado">
                <input class="input is-left" type="email" placeholder="e-mail" value="">
                <span class="icon is-small is-left">
                    <i class="fas fa-envelope"></i>
                </span>
                <span class="icon is-small is-right"></span>
            </div>
            <label class="label justificado white">Password</label>
            <div class="centrado"><input class="input" type="text" placeholder="Password"></div>
            <div class="justificado borde">
                <a class=" white" href="www.google.com">Submit</a>
            </div>
        </div>
        <div class="justificado">
            <a class="white" href="www.google.com">Forgot your password?</a><br />
            <div class="white">Don't have an account?  <a class="white" href="https://www.google.com.mx/?gfe_rd=cr&dcr=0&ei=VylpWvGmJdHj8Aej0YmoDA&gws_rd=ssl">Sign up</a></div>
        </div>
    </div>
</div>