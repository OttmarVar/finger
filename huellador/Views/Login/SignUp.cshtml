@{
    ViewData["Title"] = "Home Page";
}
<div>
    <style>
        .fondoVerdeIzquierdo {
            width: 450px;
            background-color: cadetblue;
            margin: auto;
            margin-top: 100px;
            padding: 40px;
            border-bottom-left-radius: 20px;
            border-top-left-radius: 20px;
        }

        .fondoVerdeDerecho {
            width: 450px;
            background-color: cadetblue;
            margin: auto;
            margin-top: 100px;
            padding: 40px;
            border-bottom-right-radius: 20px;
            border-top-right-radius: 20px;
        }

        html {
            background-image: url("https://banknxt.com/wp-content/uploads/2017/03/Finger-pay-redux.jpg");
            width: 100%;
            height: 100%;
            background-size: cover;
            font: white;
        }

        .whiteFinger {
            color: white;
            font-size: 15px;
        }

        .whiteHuella {
            color: white;
            font-size: 40px;
        }

        .white {
            color: white;
            font-size: 15px;
        }

        .centrado {
            width: 300px;
            margin: auto;
        }

        .centro {
            margin: 0px 100px 0px;
        }

        .justificado {
            margin: 0px 35px 0px;
        }

        .justificadoUploadI {
            margin: 0px 10px 0px 10px;
        }

        .justificadoUpload {
            margin: 0px 150px 0px 150px;
        }

        .Forgot {
            margin-bottom: 20px;
        }

        .borde {
            border-bottom-style: groove;
            border-top-style: groove;
            border-left-style: groove;
            border-right-style: groove;
            border-width: 3px;
            border-radius: 7px;
            padding-left: 125px;
            padding-right: 125px;
            margin-bottom: 20px;
            margin-top: 20px;
        }

        .bordeDerecho {
            border-bottom-style: groove;
            border-top-style: groove;
            border-left-style: groove;
            border-right-style: groove;
            border-width: 3px;
            border-radius: 7px;
            padding-left: 125px;
            padding-right: 125px;
            margin-bottom: 167px;
            margin-top: 20px;
        }

        .bordeUpload {
            margin-bottom: 10px;
            margin-top: 20px;
            background-color: rgba(255,255,255,.3);
        }

        .bordeCuadros {
            border-radius: 10px;
        }

        .bordeCuadroGrande {
            border-radius: 10px;
            padding-bottom: 100px;
        }
    </style>

    <div class="columns">
        <div class="column ">

        </div>

        <div class="column fondoVerdeIzquierdo">
            <div class="logo columns">
                <div class="column is-one-quarter justificado2">
                    <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/b/bf/Fingerprint_picture.svg/200px-Fingerprint_picture.svg.png" height="300" width="300">
                </div>
                <div class="column justificado2 whiteHuella">
                    <p class="whiteHuella">Huellador <br /></p>
                    <p class="whiteFinger">Finger print recognition</p>
                    <p class="whiteFinger">Create your account</p>
                </div>
            </div>
            <label class="label  white">Full Name</label>
            <div class="centrado"><input class="input bordeCuadros" type="text" placeholder="Jhoe Done"></div>
            <label class="label  white">Email</label>
            <div class="control has-icons-left has-icons-right centrado">
                <input class="input is-left bordeCuadros" type="email" placeholder="e-mail" value="">
                <span class="icon is-small is-left">
                    <i class="fas fa-envelope"></i>
                </span>
                <span class="icon is-small is-right"></span>
            </div>
            <label class="label  white">Phone Number</label>
            <div class="centrado"><input class="input bordeCuadros" type="text" placeholder="+52 5542718294"></div>
            <label class="label  white">Address</label>
            <div class="centrado"><input class="input bordeCuadroGrande" type="text" placeholder=""></div>
        </div>
        <div class="column fondoVerdeDerecho">
            <p class="whiteHuella ">Profile Picture <br /></p>
            <div class="justificadoUpload bordeUpload  ">
                <img src="https://png.icons8.com/windows/1600/upload-to-cloud.png" width="50" height="50" class="justificadoUploadI">
            </div>
            <label class="label justificado white">Organization</label>
            <div class="centrado"><input class="input bordeCuadros" type="text" placeholder="Example.org"></div>
            <label class="label justificado white">Password</label>
            <div class="centrado"><input class="input bordeCuadros" type="text" placeholder="**************"></div>

            <div class="justificado bordeDerecho white">
                <a class=" white" href="www.google.com">Submit</a>
            </div>
        </div>
        <div class="column">

        </div>
    </div>
</div>