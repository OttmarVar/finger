<section class="hero is-primary">
	<div class="hero-body">
		<div class="container">
			<div class="columns is-variable is-8">
				<div class="column is-two-thirds">
					<h1 class="title">
						This is People X: Prints bois
					</h1>
					<h2 class="subtitle">
						it's wonderfull
					</h2>
				</div>
				<div class="column">
					<a id="formPrintToggle" class="button is-primary is-medium is-centered">
						<span class="icon is-medium">
							<i class="fas fa-upload"></i>
						</span>
						<span>Upload a new print</span>
					</a>
				</div>
			</div>
		</div>
	</div>
</section>

